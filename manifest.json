{
	"name": "Switchy!",
	"version": "1.2.0",
	"description": "Manage and switch between multiple proxy profiles quickly and easily.",
	"icons": { "128": "assets/images/icon-128.png" },
	
	"background_page": "main.html",
	"options_page": "options.html",
	
	"permissions": [
		"tabs"
	],
	"browser_action": {
		"default_icon": "assets/images/icon-blue.png",
		"default_title": "Switchy!",
		"popup": "popup.html"
	},
	"plugins": [
		{ "path": "plugins/npSwitchy.dll" },
		{ "path": "plugins/npSwitchy.so" }
	]
	
	,"update_url": "http://www.samabox.com/projects/chrome/switchy/update.xml"
}
